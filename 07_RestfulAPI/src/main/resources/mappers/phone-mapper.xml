<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="phone">



	<insert id="insert" parameterType="Phone">
	    INSERT INTO phone (num, model, price, vcode, company_id) 
	    VALUES (#{num}, #{model}, #{price}, #{vcode}, #{company.id})
	</insert>
		
	<!-- Dynamic Query : selectAll + selectOne (num) -->	
	<select id="select" parameterType="String" resultType="Phone">
	    SELECT * FROM phone
	    <where>
	        <if test="num != null">
	            WHERE num = #{num}
	        </if>
	    </where>
	</select>


	<delete id="delete" parameterType="String">
		DELETE FROM phone
		WHERE num =
		#{num}	
	</delete>
	
	<update id="update" parameterType="Phone">
	    UPDATE phone
	    SET model = #{model}, price = #{price}, vcode = #{vcode}, company = #{company}
	    WHERE num = #{num}
	</update>
	
	<!-- Dynamic Query : id와 pw 둘다 입력했을때랑 id만 입력했을때  -->
	<select id="selectUser">
	
	</select>
	
	
	
</mapper>